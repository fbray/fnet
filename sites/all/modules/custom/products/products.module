/**
 * Implements hook_theme().
 */
function products_theme($existing, $type, $theme, $path) {
  $base = array(
    'path' => drupal_get_path('module', 'products') . '/theme',
  );
  return array(
    'node__product_display' => $base + array(
      'render element' => 'content',
      'base hook' => 'node',
      'template' => 'node--product_display',
    ),
  );
}

